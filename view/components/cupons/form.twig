<div class="border-bottom px-3 py-3 mb-2">
    <h4 class="mb-0">{{ cupom.id == '' ? 'ADICIONAR NOVO CUPOM' : 'EDITAR CUPOM: ' ~ cupom.codigo }}</h4>
</div>
<div class="px-3 py-2 pt-0">
    <form action="javascript:void(0);" method="POST" id="salvar_cupom">
            <div class="row mb-3">
                <!-- Código do Cupom -->
                <div class="col-md-6">
                    <label for="codigo" class="form-label">Código do Cupom <i class="fa-solid fa-circle-question" title="Não use Espaços ou Acentuações"></i></label>
                    <input type="text" id="codigo" name="codigo" class="form-control" maxlength="50" value="{{ cupom.codigo }}" required>
                </div>
                
                <!-- Tipo de Desconto -->
                <div class="col-md-6">
                    <label for="tipo_desconto" class="form-label">Tipo de Desconto</label>
                    <select id="tipo_desconto" name="tipo_desconto" class="form-select" required>
                        <option value="porcentagem" {{ cupom.tipo_desconto == 'porcentagem' ? 'selected' }}>Porcentagem</option>
                        <option value="valor_fixo" {{ cupom.tipo_desconto == 'valor_fixo' ? 'selected' }}>Valor Fixo</option>
                    </select>
                </div>
            </div>

            <div class="row mb-3">
                <!-- Valor do Desconto -->
                <div class="col-md-6">
                    <label for="valor_desconto" class="form-label">Valor do Desconto</label>
                    <input type="number" step="0.01" id="valor_desconto" name="valor_desconto" value="{{ cupom.valor_desconto }}" class="form-control" placeholder="Ex.: 50.00 ou 15.00 para 15%" required>
                </div>

                <!-- Data de Expiração -->
                <div class="col-md-6">
                    <label for="data_expiracao" class="form-label">Data de Expiração</label>
                    <input type="date" id="data_expiracao" name="data_expiracao" class="form-control" value="{{ cupom.data_expiracao }}">
                </div>
            </div>

            <div class="row mb-3">
                <!-- Limite de Uso -->
                <div class="col-md-6">
                    <label for="limite_uso" class="form-label">Limite de Uso</label>
                    <input type="number" id="limite_uso" name="limite_uso" class="form-control" value="{{ cupom.limite_uso ? cupom.limite_uso : '1' }}" min="1">
                </div>
                
                <!-- Status -->
                <div class="col-md-6">
                    <label for="status_cupom" class="form-label">Status</label>
                    <select id="status_cupom" name="status_cupom" class="form-select" required>
                        <option value="yes" {{ cupom.status_cupom == 'yes' ? 'selected' }}>Ativo</option>
                        <option value="no" {{ cupom.status_cupom == 'no' ? 'selected' }}>Inativo</option>
                    </select>
                </div>
            </div>

            <div class="col-md-12 col-sm-12 mt-3 pt-3 border-top mb-2">
                <div class="d-flex justify-content-start w-100">
                    <input type="hidden" name="id" value="{{ cupom.id ? cupom.id : '-1' }}">
                    <button type="submit" id="salvar" class="btn btn-primary">SALVAR CUPOM</button>
                </div>
            </div>
        </form>
       
</div>
<script src="{{ PATH }}/view/assets/js/pages/cupons.js"></script>